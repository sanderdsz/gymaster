<div class="item">
    <div>Avatar URL</div>
    <div>
        <input 
        type="url" 
        name="avatar_url" 
        placeholder="http://"
        value="{{ member.avatar_url }}">
    </div>
</div>
<div class="item">
    <div>Member</div>
    <div>
        <input 
        type="text" 
        name="name" 
        value="{{ member.name }}">
    </div>
</div>
<div class="item">
    <div>E-mail</div>
    <div>
        <input 
        type="email" 
        name="email" 
        value="{{ member.email }}">
    </div>
</div>
<div class="item">
    <div>Birth date</div>
    <div>
        <input 
        type="date" 
        name="birth"
        value="{{ member.birth }}">
    </div>
</div>
<div class="item">
    <div>Gender</div>
    <div>
        <span>
            <input 
            type="radio" 
            name="gender" 
            value="M"
            {% if member.gender == 'M' %}
                checked
            {% endif %}>
            Men
        </span>
        <span>
            <input 
            type="radio" 
            name="gender" 
            value="F"
            {% if member.gender == 'F' %}
                checked
            {% endif %}>
            Woman
        </span>
    </div>
</div>
<div class="item">
    <div>Blood type</div>
    <div>
        <select name="blood">
            <option value="A+" {% if member.blood == 'A+' %}selected{% endif %}>A+</option>
            <option value="A-" {% if member.blood == 'A-' %}selected{% endif %}>A-</option>
            <option value="B+" {% if member.blood == 'B+' %}selected{% endif %}>B+</option>
            <option value="B-" {% if member.blood == 'B-' %}selected{% endif %}>B-</option>
            <option value="AB+" {% if member.blood == 'AB+' %}selected{% endif %}>AB+</option>
            <option value="AB-" {% if member.blood == 'AB-' %}selected{% endif %}>AB-</option>
            <option value="O+" {% if member.blood == 'O+' %}selected{% endif %}> 0+</option>
            <option value="O-" {% if member.blood == 'O-' %}selected{% endif %}>0-</option>
        </select>
    </div>
</div>
<div class="item">
    <div>Weight (kg)</div>
    <div>
        <input 
        name="weight" 
        type="number"
        value="{{ member.weight }}"
        >
    </div>
</div>
<div class="item">
    <div>Height (cm)</div>
    <div>
        <input 
        name="height" 
        type="number"
        value="{{ member.height }}"
        >
    </div>
</div>
<button type="submit">Save</button>