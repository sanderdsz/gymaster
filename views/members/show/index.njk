{% extends "layout.njk" %}

{% block content %}

    <div class="card">
        <section class="avatar" style="background: url({{member.avatar_url}}) no-repeat center center / cover"></section>
        <section class="details">
            <h3>Member Details</h3>
            <div class="item">
                <div class="item-title">Member</div>
                <div class="item-description">{{ member.name }}</div>
            </div>
            <div class="item">
                <div class="item-title">E-mail</div>
                <div class="item-description">{{ member.email }}</div>
            </div>
            <div class="item">
                <div class="item-title">Age</div>
                <div class="item-description">{{ member.age }}</div>
            </div>
            <div class="item">
                <div class="item-title">Gender</div>
                <div class="item-description">{{ "Masculino" if member.gender == "M" else "Feminino"}}</div>
            </div>
            <div class="item">
                <div class="item-title">Blood type</div>
                <div class="item-description">{{ member.blood }}</div>
            </div>
            <div class="item">
                <div class="item-title">Weight (kg)</div>
                <div class="item-description">{{ member.weight }}</div>
            </div>
            <div class="item">
                <div class="item-title">Height (cm)</div>
                <div class="item-description">{{ member.height }}</div>
            </div>
            <div class="item">
                <div class="item-title">Since</div>
                <div class="item-description">{{ member.created_at }}</div>
            </div>

            <a class="button" href="/members/{{member.id}}/edit">Editar</a>
            
        </section>
    </div>

{% endblock content %}